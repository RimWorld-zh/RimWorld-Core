<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--============================ Carpets =============================-->

	<ThingDef ParentName="PlantBase">
		<defName>PlantShrubLow</defName>
		<label>low shrubs</label>
		<description>Low broadleaf shrubs. These grow in clusters and slow down movement somewhat.</description>
		<statBases>
			<MaxHitPoints>90</MaxHitPoints>
		</statBases>
		<pathCost>20</pathCost>
		<graphicData>
			<texPath>Things/Plant/ShrubLow</texPath>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible>
			<nutrition>0.20</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.7</fertilitySensitivity>
			<growDays>3</growDays>
			<reproduceMtbDays>3</reproduceMtbDays>
			<harvestWork>60</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>
				<min>0.85</min>
				<max>1.05</max>
			</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterSizeRange>
				<min>15</min>
				<max>22</max>
			</wildClusterSizeRange>
			<wildClusterRadius>3</wildClusterRadius>
		</plant>
	</ThingDef>

	<!--============================ Bushes =============================-->

	<ThingDef ParentName="BushBase">
		<defName>PlantAlocasia</defName>
		<label>alocasia</label>
		<description>A common broadleaf tropical plant.</description>
		<graphicData>
			<texPath>Things/Plant/Alocasia</texPath>
			<drawSize>2</drawSize>
			<shadowData>
				<volume>(0.55, 0.17, 0.15)</volume>
				<offset>(0,0,-0.2)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<leaflessGraphicPath>Things/Plant/Alocasia_Leafless</leaflessGraphicPath>
			<wildClusterSizeRange>
				<min>6</min>
				<max>9</max>
			</wildClusterSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
		</plant>
	</ThingDef>

	<ThingDef ParentName="BushBase">
		<defName>PlantClivia</defName>
		<label>clivia</label>
		<description>An unusual plant with tall, pretty flowers. Some call it the 'bush lily'.</description>
		<statBases>
			<Beauty>2</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Clivia</texPath>
			<drawSize>1.1</drawSize>
			<shadowData>
				<volume>(0.3, 0.2, 0.15)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<wildClusterSizeRange>
				<min>1</min>
				<max>5</max>
			</wildClusterSizeRange>
			<wildClusterRadius>3</wildClusterRadius>
		</plant>
	</ThingDef>

	<ThingDef ParentName="BushBase">
		<defName>PlantRafflesia</defName>
		<label>giant rafflesia</label>
		<description>A rare, giant flower. You would think a giant flower would be beautiful, but this one is quite smelly and ugly.</description>
		<statBases>
			<Beauty>-6</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Rafflesia</texPath>
			<drawSize>1.7</drawSize>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<topWindExposure>0.07</topWindExposure>
			<wildClusterSizeRange>
				<min>1</min>
				<max>1</max>
			</wildClusterSizeRange>
		</plant>
	</ThingDef>

	<!--============================ Wild - Trees ============================-->

	<ThingDef ParentName="TreeBase">
		<defName>PlantTreeTeak</defName>
		<label>teak tree</label>
		<description>A very strong hardwood tree, used in ancient times to build sailing ships.</description>
		<graphicData>
			<texPath>Things/Plant/TreeTeak</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Beauty>2</Beauty>
		</statBases>
		<plant>
			<growDays>32.5</growDays>
			<leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
			<harvestWork>1200</harvestWork>
			<harvestYield>54</harvestYield>
			<visualSizeRange>
				<min>1.3</min>
				<max>2.4</max>
			</visualSizeRange>
		</plant>
	</ThingDef>

	<ThingDef ParentName="TreeBase">
		<defName>PlantTreeCecropia</defName>
		<label>cecropia tree</label>
		<description>One of the most common rainforest trees. Grows very fast, but yields little usable wood.</description>
		<graphicData>
			<texPath>Things/Plant/TreeCecropia</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.18, 0.3, 0.15)</volume>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>1</Beauty>
		</statBases>
		<plant>
			<growDays>14</growDays>
			<harvestWork>550</harvestWork>
			<harvestYield>18</harvestYield>
			<wildClusterSizeRange>
				<min>8</min>
				<max>14</max>
			</wildClusterSizeRange>
			<wildClusterRadius>10</wildClusterRadius>
		</plant>
		<ingestible>
			<nutrition>1.20</nutrition>
		</ingestible>
	</ThingDef>

	<ThingDef ParentName="TreeBase">
		<defName>PlantTreePalm</defName>
		<label>palm tree</label>
		<description>A tropical tree with a long, naked trunk topped by a cluster of leaves.</description>
		<graphicData>
			<texPath>Things/Plant/TreePalm</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.18, 0.3, 0.15)</volume>
        		<offset>(0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>1</Beauty>
		</statBases>
		<plant>
			<growDays>14</growDays>
			<harvestWork>550</harvestWork>
			<harvestYield>18</harvestYield>
			<wildClusterSizeRange>
				<min>8</min>
				<max>14</max>
			</wildClusterSizeRange>
			<wildClusterRadius>10</wildClusterRadius>
		</plant>
		<ingestible>
			<nutrition>1.20</nutrition>
		</ingestible>
	</ThingDef>

	<ThingDef ParentName="TreeBase">
		<defName>PlantTreeBamboo</defName>
		<label>bamboo tree</label>
		<description>A fast-growing tree-like species that grows in cluster. Bamboo can be harvested for a wood-like material. The plant itself is not beautiful.</description>
		<graphicData>
			<texPath>Things/Plant/TreeBamboo</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.38, 0.3, 0.15)</volume>
				<offset>(0,0,-0.47)</offset>
			</shadowData>
		</graphicData>
		<plant>
			<growDays>12</growDays>
			<harvestWork>500</harvestWork>
			<harvestYield>13</harvestYield>
			<wildClusterSizeRange>
				<min>15</min>
				<max>30</max>
			</wildClusterSizeRange>
			<wildClusterRadius>5</wildClusterRadius>
		</plant>
		<ingestible>
			<nutrition>1.20</nutrition>
		</ingestible>
	</ThingDef>

</Defs>
