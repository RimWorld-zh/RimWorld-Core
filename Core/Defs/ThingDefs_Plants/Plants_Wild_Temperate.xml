<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========================== Carpets ==========================-->

  <ThingDef ParentName="PlantBase">
    <defName>PlantDandelion</defName>
    <label>dandelions</label>
    <description>A common small flower. Though it is often considered a weed, it is pleasant to look at.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>4</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Dandelion</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.18</nutrition>
    </ingestible>
    <plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
        <li>Ground</li>
      </sowTags>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>
        <min>0.3</min>
        <max>0.4</max>
      </visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <reproduceMtbDays>3</reproduceMtbDays>
      <wildClusterSizeRange>
        <min>6</min>
        <max>8</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>PlantAstragalus</defName>
    <label>astragalus</label>
    <description>A small perennial wildflower that grows in alpine climates.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>4</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Astragalus</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.18</nutrition>
    </ingestible>
    <plant>
      <fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>
				<min>0.3</min>
				<max>0.4</max>
			</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
      <reproduceMtbDays>5</reproduceMtbDays>
      <wildClusterSizeRange>
        <min>2</min>
        <max>6</max>
      </wildClusterSizeRange>
      <wildClusterRadius>4</wildClusterRadius>
    </plant>
  </ThingDef>

  <ThingDef ParentName="PlantBase">
    <defName>PlantMoss</defName>
    <label>moss</label>
    <description>A wild moss that grows in clumps in areas of low light and high humidity. Very hardy and frost-resistant.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Moss</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible>
      <nutrition>0.15</nutrition>
    </ingestible>
    <plant>
      <fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>7.5</growDays>
      <leaflessGraphicPath>Things/Plant/Moss_Leafless</leaflessGraphicPath>
      <harvestWork>60</harvestWork>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.4</min>
        <max>0.6</max>
      </visualSizeRange>
      <topWindExposure>0.0</topWindExposure>
    </plant>
  </ThingDef>

	<!--============================= Bushes ================================-->

	<ThingDef ParentName="PlantBase">
		<defName>PlantRaspberry</defName>
		<label>raspberry bush</label>
		<description>A bushy plant which yields delicious red berries.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/RaspberryPlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<fillPercent>0.20</fillPercent>
		<pathCost>30</pathCost>
		<ingestible>
			<nutrition>0.35</nutrition>
		</ingestible>
		<plant>
			<fertilityMin>0.5</fertilityMin>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>3</growDays>
			<leaflessGraphicPath>Things/Plant/Bush_Leafless</leaflessGraphicPath>
			<immatureGraphicPath>Things/Plant/RaspberryImmature</immatureGraphicPath>
			<harvestYield>10</harvestYield>
			<harvestWork>400</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestedThingDef>RawBerries</harvestedThingDef>
			<wildCommonalityMaxFraction>3.0</wildCommonalityMaxFraction>
			<wildClusterSizeRange>
				<min>7</min>
				<max>10</max>
			</wildClusterSizeRange>
			<wildClusterRadius>3.5</wildClusterRadius>
			<visualSizeRange>
				<min>0.7</min>
				<max>1.2</max>
			</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
		</plant>
	</ThingDef>

	<!--============================ Trees ============================-->

  <ThingDef ParentName="TreeBase">
    <defName>PlantTreeOak</defName>
    <label>oak tree</label>
    <description>A strong hardwood tree. Slow-going, but its wood is very strong.</description>
    <graphicData>
      <texPath>Things/Plant/TreeOak</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.35, 0.13)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
    </statBases>
    <plant>
			<growDays>30</growDays>
			<leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
      <harvestWork>1000</harvestWork>
      <harvestYield>45</harvestYield>
    </plant>
  </ThingDef>

  <ThingDef ParentName="TreeBase">
    <defName>PlantTreePoplar</defName>
    <label>poplar tree</label>
    <description>A softwood tree. Grows fast, but yields little useful wood.</description>
    <graphicData>
      <texPath>Things/Plant/TreePoplar</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Beauty>1</Beauty>
    </statBases>
    <ingestible>
      <nutrition>1.0</nutrition>
    </ingestible>
    <plant>
			<growDays>15.05</growDays>
			<leaflessGraphicPath>Things/Plant/TreePoplar_Leafless</leaflessGraphicPath>
			<harvestWork>650</harvestWork>
      <harvestYield>27</harvestYield>
    </plant>
  </ThingDef>

  <ThingDef ParentName="TreeBase">
    <defName>PlantTreePine</defName>
    <label>pine tree</label>
    <description>A large conifer.</description>
    <graphicData>
      <texPath>Things/Plant/TreePine</texPath>
      <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
    </statBases>
    <ingestible>
      <nutrition>1.25</nutrition>
    </ingestible>
		<plant>
			<growDays>20</growDays>
			<visualSizeRange>
        <min>1.3</min>
        <max>3.0</max>
      </visualSizeRange>
      <harvestWork>700</harvestWork>
      <harvestYield>27</harvestYield>
    </plant>
  </ThingDef>

  <ThingDef ParentName="TreeBase">
    <defName>PlantTreeBirch</defName>
    <label>birch tree</label>
    <description>A northern tree known for its thin, paper-like bark.</description>
    <graphicData>
      <texPath>Things/Plant/TreeBirch</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.15, 0.3, 0.1)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
    </statBases>
    <ingestible>
      <nutrition>1.25</nutrition>
    </ingestible>
    <plant>
			<growDays>20</growDays>
      <harvestWork>700</harvestWork>
      <harvestYield>27</harvestYield>
      <leaflessGraphicPath>Things/Plant/TreeBirch_Leafless</leaflessGraphicPath>
    </plant>
  </ThingDef>

</Defs>
