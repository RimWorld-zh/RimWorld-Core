  <ThingSetMakerDef>
    <defName>Reward_StandardByDropPod</defName>
    <root Class="ThingSetMaker_RandomOption">
      <fixedParams>
        <totalMarketValueRange>
          <min>2000</min>
          <max>3500</max>
        </totalMarketValueRange>
        <qualityGenerator>Reward</qualityGenerator>
      </fixedParams>
      <options>
        <li>
          <weight>1</weight>
          <weightIfPlayerHasNoSuchItem>6</weightIfPlayerHasNoSuchItem>
          <thingSetMaker Class="ThingSetMaker_Count">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>AIPersonaCore</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Silver</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>6</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingSetMakerTagsToAllow>
                  <li>RewardSpecial</li>
                </thingSetMakerTagsToAllow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>ResourcesRaw</li>
                </categories>
                <thingSetMakerTagsToDisallow>
                  <li>RewardSpecial</li>
                </thingSetMakerTagsToDisallow>
                <disallowCheaperThan>6</disallowCheaperThan>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>6</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <tradeTagsToAllow>
                  <li>ExoticMisc</li>
                </tradeTagsToAllow>
                <categories>
                  <li>Weapons</li>
                  <li>Apparel</li>
                  <li>BuildingsArt</li>
                  <li>BuildingsFurniture</li>
                  <li>BodyPartsArtificial</li>
                </categories>
                <thingDefs>
                  <li>MegascreenTelevision</li>
                  <li>FlatscreenTelevision</li>
                </thingDefs>
                <disallowedThingDefs>
                  <li>Apparel_SmokepopBelt</li>
                  <li>MedicineUltratech</li>
                  <li>ComponentSpacer</li>
                  <li>Hyperweave</li>
                  <li>CochlearImplant</li>
                  <li>BionicEar</li>
                </disallowedThingDefs>
                <thingSetMakerTagsToDisallow>
                  <li>RewardSpecial</li>
                  <li>AnimalPart</li>
                </thingSetMakerTagsToDisallow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1.4</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>MedicineUltratech</li>
                  <li>ComponentSpacer</li>
                  <li>Hyperweave</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_Count">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Apparel_PowerArmor</li>
                  <li>Apparel_PlateArmor</li>
                  <li>Apparel_ShieldBelt</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
      </options>
    </root>
  </ThingSetMakerDef>

