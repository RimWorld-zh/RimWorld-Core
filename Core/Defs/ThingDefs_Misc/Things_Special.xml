<?xml version="1.0" encoding="utf-8" ?>
<ThingDefinitions>

  <ThingDef>
    <defName>RectTrigger</defName>
    <label>RectTrigger</label>
		<category>Ethereal</category>
		<thingClass>RectTrigger</thingClass>
    <drawerType>None</drawerType>
    <tickerType>Normal</tickerType>
		<useHitPoints>false</useHitPoints>
  </ThingDef>
  
  <ThingDef>
    <defName>DropPodIncoming</defName>
    <label>drop pod (incoming)</label>
    <category>Skyfaller</category>
		<thingClass>DropPodIncoming</thingClass>
		<tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/DropPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>1.9</drawSize>
    </graphicData>
    <altitudeLayer>MetaOverlays</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <drawOffscreen>true</drawOffscreen>
  </ThingDef>

  <ThingDef>
    <defName>DropPodLeaving</defName>
    <label>drop pod (leaving)</label>
    <category>Skyfaller</category>
		<thingClass>DropPodLeaving</thingClass>
		<tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/DropPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>1.9</drawSize>
    </graphicData>
    <altitudeLayer>MetaOverlays</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <drawOffscreen>true</drawOffscreen>
  </ThingDef>

  <ThingDef>
    <defName>ActiveDropPod</defName>
    <label>drop pod</label>
    <category>Item</category>
    <thingClass>ActiveDropPod</thingClass>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/DropPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.9</drawSize>
      <shadowData>
        <volume>(0.8, 0.6, 0.8)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <blockWind>true</blockWind>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
  </ThingDef>

  <ThingDef>
    <defName>Fire</defName>
    <label>fire</label>
    <thingClass>Fire</thingClass>
    <category>Attachment</category>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Special/Fire</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData> 
    <altitudeLayer>PawnState</altitudeLayer>
    <useHitPoints>false</useHitPoints>
  </ThingDef>

  <ThingDef>
    <defName>Spark</defName>
    <label>spark</label>
		<category>Projectile</category>
		<thingClass>Spark</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Spark</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <neverMultiSelect>true</neverMultiSelect>
    <projectile>
      <alwaysFreeIntercept>true</alwaysFreeIntercept>
      <speed>1.5</speed>
    </projectile>
  </ThingDef>

</ThingDefinitions>