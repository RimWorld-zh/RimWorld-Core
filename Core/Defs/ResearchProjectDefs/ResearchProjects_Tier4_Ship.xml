<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--=============================== Tier 4: Hi-tech research bench with multi-analyzer ===================================-->

	<ResearchProjectDef Name="ShipResearchProjectBase" Abstract="True">
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
	</ResearchProjectDef>

	<ResearchProjectDef ParentName="ShipResearchProjectBase">
		<defName>ShipBasics</defName>
		<label>shipbuilding basics</label>
		<description>Allows you to start researching more advanced shipbuilding technologies and eventually build a ship to escape the planet.</description>
		<baseCost>1000</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>MultiAnalyzer</li>
		</prerequisites>
		<researchViewX>11</researchViewX>
		<researchViewY>2</researchViewY>
	</ResearchProjectDef>

	<ResearchProjectDef ParentName="ShipResearchProjectBase">
		<defName>ShipCryptosleep</defName>
		<label>ship cryptosleep caskets</label>
		<description>Allows you to construct ship cryptosleep caskets for transporting cryptosleeping colonists between the stars.</description>
		<baseCost>1200</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>ShipBasics</li>
			<li>Cryptosleep</li>
		</prerequisites>
		<researchViewX>12</researchViewX>
		<researchViewY>4.8</researchViewY>
	</ResearchProjectDef>

	<ResearchProjectDef ParentName="ShipResearchProjectBase">
		<defName>ShipReactor</defName>
		<label>ship antimatter reactor</label>
		<description>Allows you to use an antimatter containment core to build a reactor to power a ship.</description>
		<baseCost>8000</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>ShipBasics</li>
		</prerequisites>
		<researchViewX>12</researchViewX>
		<researchViewY>1.2</researchViewY>
	</ResearchProjectDef>

	<ResearchProjectDef ParentName="ShipResearchProjectBase">
		<defName>ShipEngine</defName>
		<label>ship antimatter propulsion</label>
		<description>Allows you to construct an engine for a ship.</description>
		<baseCost>4000</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>ShipBasics</li>
		</prerequisites>
		<researchViewX>12</researchViewX>
		<researchViewY>2.4</researchViewY>
	</ResearchProjectDef>

	<ResearchProjectDef ParentName="ShipResearchProjectBase">
		<defName>ShipComputerCore</defName>
		<label>ship computer core</label>
		<description>Allows coercing an existing AI persona into a usable AI computer core for ship guidance.</description>
		<baseCost>1500</baseCost>
		<techLevel>Spacer</techLevel>
		<prerequisites>
			<li>ShipBasics</li>
		</prerequisites>
		<researchViewX>12</researchViewX>
		<researchViewY>3.6</researchViewY>
	</ResearchProjectDef>

  <ResearchProjectDef ParentName="ShipResearchProjectBase">
    <defName>ShipSensorCluster</defName>
    <label>ship sensor cluster</label>
    <description>Allows you to construct long-range sensors for a ship.</description>
    <baseCost>3000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>ShipBasics</li>
      <li>GroundPenetratingScanner</li>
      <li>LongRangeMineralScanner</li>
    </prerequisites>
    <researchViewX>12</researchViewX>
    <researchViewY>0</researchViewY>
  </ResearchProjectDef>

</Defs>
