<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Player initial namers - used initially -->

  <RulePackDef>
    <defName>NamerInitialSettlementColony</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->Colony</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerInitialSettlementTribe</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->Village</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Outlander -->

  <RulePackDef>
    <defName>OutlanderWord</defName>
    <rulePack>
      <rulesStrings>
        <li>outlanderword->[esyl][placeend]</li>
        <li>outlanderword->[esyl][placeend]</li>
        <li>outlanderword->[esyl][placeend]</li>
        <li>outlanderword->[esyl][esyl][placeend]</li>
        <li>outlanderword->[esyl][esyl][placeend]</li>
        <li>outlanderword->[esyl][esyl][esyl][placeend]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>esyl</keyword>
          <path>WordParts/Syllables_English</path>
        </li>
        <li Class="Rule_File">
          <keyword>placeend</keyword>
          <path>WordParts/PlaceEndings</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerFactionOutlander</defName>
    <include>
      <li>OutlanderWord</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name(p=3)->[nearnameinitial]</li>
        <li>r_name->[nearnameinitial] [politicalunion]</li>
        <li>r_name->[nearnameinitial] [politicaladjective] [politicalunion]</li>
        <li>r_name->[politicalunion] of [nearnameinitial]</li>
        <li>r_name->[politicaladjective] [politicalunion] of [nearnameinitial]</li>
        <li>nearnameinitial(p=3)->[outlanderword]</li>
        <li>nearnameinitial->[Direction] [outlanderword]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>politicalunion</keyword>
          <path>Words/Nouns/PoliticalUnions_Outlander</path>
        </li>
        <li Class="Rule_File">
          <keyword>politicaladjective</keyword>
          <path>Words/Adjectives/PoliticalUnions</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerSettlementOutlander</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name(p=12)->[townname_wordgen]</li>
        <li>r_name(p=6)->[townname_fixed]</li>
        <li>r_name(p=4)->[townname_combo]</li>
        <li>r_name->[townname_near]</li>

        <li>topicalnoun->[Vegetable]</li>
        <li>topicalnoun->[Game]</li>
        <li>topicalnoun->[BodyPart]</li>

        <li>townname_combo->[topicalnoun] [TerrainFeature]</li>
        <li>townname_combo->[topicalnoun] [Community]</li>
        <li>townname_combo->[topicalnoun]'s [TerrainFeature]</li>
        <li>townname_combo->[topicalnoun]'s [Community]</li>
        <li>townname_combo(p=2)->[concept_positive]'s [TerrainFeature]</li>
        <li>townname_combo(p=2)->[concept_positive] [TerrainFeature]</li>
        <li>townname_combo(p=2)->[concept_positive] [Community]</li>
        <li>townname_combo(p=3)->[Character]'s [TerrainFeature]</li>
        <li>townname_combo(p=3)->[Character]'s [Community]</li>

        <li>townname_near->[nearnameinitial]-at-the-[TerrainFeature]</li>
        <li>townname_near->[nearnameinitial]-by-the-[TerrainFeature]</li>
        <li>townname_near->[nearnameinitial]-on-the-[TerrainFeature]</li>
        <li>nearnameinitial->[townname_wordgen]</li>
        <li>nearnameinitial->[Community]</li>

        <li>townname_wordgen(p=2)->[syl][syl]</li>
        <li>townname_wordgen(p=2)->[syl][syl][syl]</li>
        <li>townname_wordgen(p=2)->[syl][townend]</li>
        <li>townname_wordgen(p=2)->[syl][syl][townend]</li>
        <li>townname_wordgen->[TerrainFeature][townend]</li>
        <li>townname_wordgen->[topicalnoun][townend]</li>
        <li>townend->ville</li>
        <li>townend->town</li>
        <li>townend->hurst</li>
        <li>townend->bourne</li>
        <li>townend->brad</li>
        <li>townend->dale</li>
        <li>townend->hope</li>
        <li>townend->ing</li>
        <li>townend->ness</li>
        <li>townend->mere</li>
        <li>townend->shaw</li>
        <li>townend->wick</li>
        <li>townend->ton</li>
        <li>townend->ston</li>
        <li>townend->os</li>
        <li>townend->den</li>
        <li>townend->tas</li>
        <li>townend->wood</li>
        <li>townend->land</li>
        <li>townend->worth</li>
        <li>townend->roon</li>
        <li>townend->ron</li>
        <li>townend->well</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>townname_fixed</keyword>
          <path>Names/OutlanderTown</path>
        </li>
        <li Class="Rule_File">
          <keyword>concept_positive</keyword>
          <path>Words/Nouns/Concepts_Positive</path>
        </li>
        <li Class="Rule_File">
          <keyword>community</keyword>
          <path>Words/Nouns/Communities</path>
        </li>
        <li Class="Rule_File">
          <keyword>terrainfeature</keyword>
          <path>Words/Nouns/TerrainFeatures</path>
        </li>
        <li Class="Rule_File">
          <keyword>person</keyword>
          <pathList>
            <li>Words/Nouns/People_General</li>
          </pathList>
        </li>
        <li Class="Rule_File">
          <keyword>syl</keyword>
          <path>WordParts/Syllables_English</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <!-- Tribe -->

  <RulePackDef>
    <defName>TribalWord</defName>
    <rulePack>
      <rulesStrings>
        <li>tribalword->[tribalwordfile]</li>
        <li>tribalword->[trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl][trsyl][trsyl]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>tribalwordfile</keyword>
          <path>Words/Foreign/Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>trsyl</keyword>
          <path>WordParts/Syllables_Tribal</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>NamerFactionTribal</defName>
    <include>
      <li>TribalWord</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name->[tribalworld] [politicalunion]</li>
        <li>r_name->The [tribalworld] [politicalunion]</li>
        <li>r_name->The [Color] [TerrainFeature] [politicalunion]</li>
        <li>r_name->[politicalunion] of [tribalword]</li>
        <li>r_name->The [Color] [Animal] [tribalword]</li>
        <li>r_name->The [tribalword] of the [TerrainFeature]</li>
        <li>tribalword->[tribalwordfile]</li>
        <li>tribalword->[trsyl][trsyl]</li>
				<li>tribalword->[trsyl][trsyl]</li>
				<li>tribalword->[trsyl][trsyl]</li>
				<li>tribalword->[trsyl][trsyl][trsyl]</li>
				<li>tribalword->[trsyl][trsyl][trsyl]</li>
				<li>tribalword->[trsyl][trsyl][trsyl][trsyl]</li>
			</rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>tribalwordfile</keyword>
          <path>Words/Foreign/Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>trsyl</keyword>
          <path>WordParts/Syllables_Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>politicalunion</keyword>
          <path>Words/Nouns/PoliticalUnions_Outlander</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerSettlementTribal</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->[tribalword]</li>
        <li>r_name->[tribalword]</li>
        <li>r_name->[Color] [tribalword]</li>
        <li>r_name->[Color] [TerrainFeature]</li>
        <li>r_name->[tribalword] [TerrainFeature]</li>
        <li>tribalword->[tribalwordfile]</li>
        <li>tribalword->[trsyl][trsyl]</li>
        <li>tribalword->[trsyl][trsyl][trsyl]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>tribalwordfile</keyword>
          <path>Words/Foreign/Tribal</path>
        </li>
        <li Class="Rule_File">
          <keyword>trsyl</keyword>
          <path>WordParts/Syllables_Tribal</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

 <!-- Pirate -->

  <RulePackDef>
    <defName>NamerFactionPirate</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name->The [animal_badass]s</li>
        <li>r_name->The [animal_badass] Men</li>
        <li>r_name->The [animal_badass]s of [concept_badass]</li>
        <li>r_name->The [person_badass]s of [concept_badass]</li>
        <li>r_name->The [person_badass]s</li>
        <li>r_name->The [Weapon] Men</li>
        <li>r_name->The [Weapon]s</li>
        <li>r_name->The [Weapon] [animal_badass]s</li>
        <li>r_name->The [color_badass] [Weapon]s</li>
        <li>r_name->The [color_badass] [animal_badass]s</li>
        <li>r_name->The [color_badass] [person_badass]s</li>
        <li>r_name->The [person_badass] [groupname]</li>
        <li>r_name->The [AdjectiveBadass] [groupname]</li>
        <li>r_name->The [AdjectiveBadass] [animal_badass]s</li>
        <li>r_name->The [AdjectiveBadass] [person_badass]s</li>
        <li>r_name->[Weapon] [groupname]</li>
        <li>r_name->[concept_badass] [groupname]</li>
        <li>r_name->[concept_badass][groupname]</li>
      </rulesStrings>
      <rulesRaw>
        <li Class="Rule_File">
          <keyword>animal_badass</keyword>
          <path>Words/Nouns/Animals_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>adjective_badass</keyword>
          <path>Words/Adjectives/Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>person_badass</keyword>
          <path>Words/Nouns/People_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>concept_badass</keyword>
          <path>Words/Nouns/Concepts_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>groupname</keyword>
          <path>Words/Nouns/GroupNames</path>
        </li>
        <li Class="Rule_File">
          <keyword>color_badass</keyword>
          <path>Words/Nouns/Colors_Badass</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerSettlementPirate</defName>
    <rulePack>
      <rulesStrings>
        <li>r_name(p=4)->[townname_combo]</li>
        <li>r_name->[townname_wordgen]</li>

        <li>townname_combo->[animal_badass] [geography]</li>
        <li>townname_combo->[animal_badass]'s [geography]</li>
        <li>townname_combo->[concept_badass] [geography]</li>
        <li>townname_combo->[concept_badass]'s' [geography]</li>
        <li>townname_combo->[person_badass] [geography]</li>
        <li>townname_combo->[person_badass]'s [geography]</li>
        <li>townname_combo->[Enemy]'s [geography]</li>
        <li>townname_combo->[Enemy] [geography]</li>
        <li>townname_combo->[Weapon]'s [geography]</li>
        <li>townname_combo->[Weapon] [geography]</li>
        <li>townname_combo->[color_badass] [geography]</li>
        <li>geography(p=2)->[TerrainFeature]</li>
        <li>geography->[Community]</li>

        <li>townname_wordgen(p=2)->[esyl][esyl]</li>
        <li>townname_wordgen(p=2)->[esyl][esyl][esyl]</li>
        <li>townname_wordgen(p=2)->[esyl][townendevil]</li>
        <li>townname_wordgen(p=2)->[esyl][esyl][townendevil]</li>
        <li>townendevil->vast</li>
        <li>townendevil->varg</li>
        <li>townendevil->vix</li>
        <li>townendevil->tor</li>
        <li>townendevil->tear</li>
        <li>townendevil->cut</li>
        <li>townendevil->lop</li>
        <li>townendevil->oze</li>
        <li>townendevil->ozzle</li>
        <li>townendevil->latch</li>
        <li>townendevil->lock</li>
        <li>townendevil->burn</li>
        <li>townendevil->sear</li>
        <li>townendevil->shank</li>
        <li>townendevil->hurt</li>
        <li>townendevil->vash</li>
        <li>townendevil->warg</li>
        <li>townendevil->wug</li>
        <li>townendevil->thot</li>
        <li>townendevil->thard</li>
        <li>townendevil->thad</li>
      </rulesStrings>
      <rulesRaw>
      <li Class="Rule_File">
          <keyword>esyl</keyword>
          <path>WordParts/Syllables_English</path>
        </li>
        <li Class="Rule_File">
          <keyword>animal_badass</keyword>
          <path>Words/Nouns/Animals_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>adjective_badass</keyword>
          <path>Words/Adjectives/Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>person_badass</keyword>
          <path>Words/Nouns/People_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>concept_badass</keyword>
          <path>Words/Nouns/Concepts_Badass</path>
        </li>
        <li Class="Rule_File">
          <keyword>color_badass</keyword>
          <path>Words/Nouns/Colors_Badass</path>
        </li>
      </rulesRaw>
    </rulePack>
  </RulePackDef>


</Defs>
