<?xml version="1.0" encoding="utf-8" ?>
<ThoughtDefs>

  <ThoughtDef>
    <defName>AteWithoutTable</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>ate without table</label>
        <description>I had to eat a meal off the ground. Can't we get a table around here?</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SleepDisturbed</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>4</stackLimit>
    <stackedEffectMultiplier>0.4</stackedEffectMultiplier>
    <stages>
      <li>
        <label>disturbed sleep</label>
        <description>I was disturbed during sleep by people moving around nearby. A private room would solve this.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>NewColonyOptimism</defName>
    <durationDays>5</durationDays>
    <nextThought>NewColonyHope</nextThought>
    <stages>
      <li>
        <label>new colony optimism</label>
        <description>We just landed here. It's a tough situation, but I'm excited to be founding a new colony.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>NewColonyHope</defName>
    <durationDays>5</durationDays>
    <stages>
      <li>
        <label>new colony hope</label>
        <description>I'm getting used to this, but it's still an exciting new situation. I hope this works out...</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SleptOutside</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>slept outside</label>
        <description>I had to sleep outdoors without any protection from the elements.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SleptOnGround</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>slept on ground</label>
        <description>I had to sleep on the ground like an animal.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SleptInCold</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>slept in the cold</label>
        <description>I had to sleep in the cold. We really need some heaters.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>SleptInHeat</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>slept in the heat</label>
        <description>I had to sleep in unbearable heat. Can't we have air conditioning?</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KnowPrisonerSold</defName>
    <durationDays>7.5</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>a prisoner was sold</label>
        <description>This colony sold a prisoner into slavery. That's a worrying thought.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KnowGuestOrganHarvested</defName>
    <durationDays>7.5</durationDays>
    <stackLimit>5</stackLimit>
    <stackedEffectMultiplier>0.75</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>someone's organ harvested</label>
        <description>The colony took body parts from a guest or prisoner. It's horrible, breaking someone down for parts when they have no choice.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KnowColonistOrganHarvested</defName>
    <durationDays>7.5</durationDays>
    <stackLimit>5</stackLimit>
    <stackedEffectMultiplier>0.75</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>colonist's organ harvested</label>
        <description>Someone took body parts from a colonist. It's horrible, breaking someone down for parts when they have no choice.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MyOrganHarvested</defName>
    <durationDays>7.5</durationDays>
    <stackLimit>5</stackLimit>
    <stages>
      <li>
        <label>my organ harvested</label>
        <description>The colony harvested body parts from me! They're breaking me down like an old engine!</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>WasImprisoned</defName>
    <durationDays>5</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>was imprisoned</label>
        <description>The colony had me in jail for a while, like a caged animal.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>GreenThumbHappy</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>20</stackLimit>
    <stackedEffectMultiplier>1.0</stackedEffectMultiplier>
    <requiredTraits>
      <li>GreenThumb</li>
    </requiredTraits>
    <stages>
      <li>
        <label>sowed a plant</label>
        <description>What the world needs is more plants!</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Catharsis</defName>
    <durationDays>2.0</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>catharsis</label>
        <description>It felt good to finally unbottle my feelings.</description>
        <baseMoodEffect>25</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Nuzzled</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>10</stackLimit>
    <stackedEffectMultiplier>0.95</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>nuzzled</label>
        <description>A cute animal nuzzled me.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KnowBuriedInSarcophagus</defName>
    <durationDays>1</durationDays>
    <stackedEffectMultiplier>0.4</stackedEffectMultiplier>
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>buried in sarcophagus</label>
        <description>This colony buried someone in an ornamented sarcophagus. May their soul rest in peace.</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- ============== Human corpse butchering ===============-->

  <ThoughtDef>
    <defName>ButcheredHumanlikeCorpse</defName>
    <durationDays>6.0</durationDays>
    <stackLimit>4</stackLimit>
    <stackedEffectMultiplier>0.75</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
      <li>Cannibal</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>I butchered humanlike</label>
        <description>I butchered someone up like an animal.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KnowButcheredHumanlikeCorpse</defName>
    <durationDays>6.0</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
      <li>Cannibal</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>We butchered humanlike</label>
        <description>We butchered someone up like an animal.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


  <!-- ============== Combat ============== -->

  <ThoughtDef>
    <defName>ObservedLayingCorpse</defName>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>0.25</durationDays>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stackLimit>3</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
      <li>Cannibal</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>observed corpse</label>
        <description>I saw a dead body laying on the ground. It was disturbing.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ObservedLayingRottingCorpse</defName>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>0.25</durationDays>
    <stackedEffectMultiplier>0.3</stackedEffectMultiplier>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>observed rotting corpse</label>
        <description>I saw a rotting corpse laying on the ground. It was disgusting.</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>WitnessedDeathAlly</defName>
    <durationDays>1.5</durationDays>
    <stackedEffectMultiplier>0.4</stackedEffectMultiplier>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>witnessed ally's death</label>
        <description>I saw one of my people die. They were alive one moment, and dead the next.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>WitnessedDeathNonAlly</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>witnessed outsider's death</label>
        <description>I saw someone die. They were alive one moment, and dead the next.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>WitnessedDeathFamily</defName>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>witnessed family member's death</label>
        <description>I saw a member of my family die. My own flesh and blood...</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>WitnessedDeathBloodlust</defName>
    <durationDays>2</durationDays>
    <stackedEffectMultiplier>0.4</stackedEffectMultiplier>
    <stackLimit>5</stackLimit>
    <requiredTraits>
      <li>Bloodlust</li>
    </requiredTraits>
    <stages>
      <li>
        <label>witnessed death with bloodlust</label>
        <description>I saw someone die! That was intense!</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>KilledHumanlikeBloodlust</defName>
    <durationDays>2</durationDays>
    <stackedEffectMultiplier>0.4</stackedEffectMultiplier>
    <stackLimit>5</stackLimit>
    <requiredTraits>
      <li>Bloodlust</li>
    </requiredTraits>
    <stages>
      <li>
        <label>killed someone</label>
        <description>I killed someone! What a rush!</description>
        <baseMoodEffect>13</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</ThoughtDefs>