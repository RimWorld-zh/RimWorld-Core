    <defName>ElephantTusk</defName>
    <label>elephant tusk</label>
    <description>An elephant's tusk. Very durable and valuable. Deadly but somewhat unwieldy as a weapon.</description>
    <graphicData>
      <texPath>Things/Item/Special/ElephantTusk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <statBases>
      <MarketValue>450</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>1.8</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>10</stackLimit>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>18</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
      <li>
        <label>base</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
  </ThingDef>


</Defs>
