<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Note: All pawns come with a random importance factor between 0-100; that constant scale value is what these numbers are relative to -->
  
  <StoryEventDef>
    <defName>DamageTaken</defName>
    <importance>5</importance>
  </StoryEventDef>

  <StoryEventDef>
    <defName>DamageDealt</defName>
    <importance>10</importance>
  </StoryEventDef>

  <!-- Does not imply a successful attack -->
  <StoryEventDef>
    <defName>AttackedPlayer</defName>
    <importance>5</importance>
  </StoryEventDef>

  <!-- Includes animals -->
  <StoryEventDef>
    <defName>KilledPlayer</defName>
    <importance>100</importance>
  </StoryEventDef>

  <StoryEventDef>
    <defName>TendedByPlayer</defName>
    <importance>10</importance>
  </StoryEventDef>

  <StoryEventDef>
    <defName>Seen</defName>
    <importance>20</importance>
  </StoryEventDef>

  <StoryEventDef>
    <defName>TaleCreated</defName>
    <importance>100</importance>
  </StoryEventDef>

</Defs>
