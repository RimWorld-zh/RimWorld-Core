<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <SpecialThingFilterDef>
    <defName>AllowCorpsesColonist</defName>
    <label>allow colonist corpses</label>
    <description>Allow the dead bodies of colonists.</description>
    <parentCategory>CorpsesHumanlike</parentCategory>
    <allowedByDefault>false</allowedByDefault>
    <saveKey>allowCorpsesColonist</saveKey>
    <workerClass>SpecialThingFilterWorker_CorpsesColonist</workerClass>
  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowCorpsesStranger</defName>
    <label>allow stranger corpses</label>
    <description>Allow the dead bodies of strangers and enemies.</description>
    <parentCategory>CorpsesHumanlike</parentCategory>
    <allowedByDefault>false</allowedByDefault>
    <saveKey>allowCorpsesStranger</saveKey>
    <workerClass>SpecialThingFilterWorker_CorpsesStranger</workerClass>
  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowRotten</defName>
    <label>allow rotten</label>
    <description>Allow organic things which have started to rot.</description>
    <parentCategory>Root</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowRotten</saveKey>
    <workerClass>SpecialThingFilterWorker_Rotten</workerClass>
  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowFresh</defName>
    <label>allow fresh</label>
    <description>Allow organic things which haven't started to rot yet.</description>
    <parentCategory>Root</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowFresh</saveKey>
    <workerClass>SpecialThingFilterWorker_Fresh</workerClass>
  </SpecialThingFilterDef>

	<SpecialThingFilterDef>
		<defName>AllowPlantFood</defName>
		<label>allow plant food</label>
		<description>Allow foods that are of quality equivalent to unharvested plants, like hay.</description>
		<parentCategory>Root</parentCategory>
		<allowedByDefault>true</allowedByDefault>
		<saveKey>allowPlantFood</saveKey>
		<configurable>false</configurable>
		<workerClass>SpecialThingFilterWorker_PlantFood</workerClass>
	</SpecialThingFilterDef>

	<SpecialThingFilterDef>
		<defName>AllowSmeltable</defName>
		<label>allow smeltable</label>
		<parentCategory>Weapons</parentCategory>
		<allowedByDefault>true</allowedByDefault>
		<saveKey>allowSmeltable</saveKey>
		<workerClass>SpecialThingFilterWorker_Smeltable</workerClass>
	</SpecialThingFilterDef>
	
	<SpecialThingFilterDef>
		<defName>AllowNonSmeltableWeapons</defName>
		<label>allow non-smeltable</label>
		<parentCategory>Weapons</parentCategory>
		<allowedByDefault>true</allowedByDefault>
		<saveKey>allowNonSmeltableWeapons</saveKey>
		<workerClass>SpecialThingFilterWorker_NonSmeltableWeapons</workerClass>
	</SpecialThingFilterDef>

	<SpecialThingFilterDef>
		<defName>AllowNonDeadmansApparel</defName>
		<label>allow clean apparel</label>
    <description>Allow clothing that was never worn by a corpse. Most humans find corpse-tainted clothing to be disturbing, and traders will not accept it.</description>
		<parentCategory>Apparel</parentCategory>
		<allowedByDefault>true</allowedByDefault>
		<saveKey>allowNonDeadmansApparel</saveKey>
		<workerClass>SpecialThingFilterWorker_NonDeadmansApparel</workerClass>
	</SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowDeadmansApparel</defName>
    <label>allow tainted apparel</label>
    <description>Allow clothing that was once worn by a corpse. Most humans find corpse-tainted clothing to be disturbing, and traders will not accept it.</description>
    <parentCategory>Apparel</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowDeadmansApparel</saveKey>
    <workerClass>SpecialThingFilterWorker_DeadmansApparel</workerClass>
  </SpecialThingFilterDef>
	
</Defs>


