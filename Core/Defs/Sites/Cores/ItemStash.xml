<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <SiteCoreDef>
    <defName>ItemStash</defName>
    <label>item stash</label>
		<description>A stash of valuable items.</description>
    <siteTexture>World/WorldObjects/Sites/GenericSite</siteTexture>
    <expandingIconTexture>World/WorldObjects/Expanding/Sites/ItemStash</expandingIconTexture>
  </SiteCoreDef>

  <GenStepDef>
    <defName>ItemStash</defName>
    <linkWithSite>ItemStash</linkWithSite>
    <order>460</order>
    <genStep Class="GenStep_ItemStash">
      <itemCollectionGeneratorDefs> <!-- may be overwritten by IncidentWorker_QuestItemStash -->
        <li>RawResources</li>
        <li>Apparel</li>
        <li>Weapons</li>
      </itemCollectionGeneratorDefs>
      <totalValueRange><min>2500</min><max>3200</max></totalValueRange> <!-- may be overwritten by IncidentWorker_QuestItemStash -->
      <count>1</count>
      <nearMapCenter>true</nearMapCenter>
    </genStep>
  </GenStepDef>

</Defs>