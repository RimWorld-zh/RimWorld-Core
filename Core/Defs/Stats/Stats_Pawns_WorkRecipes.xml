<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Artistic recipes - speed not affected by skill because skill affects output quality-->

  <StatDef>
    <defName>SculptingSpeed</defName>
    <label>sculpting speed</label>
    <description>The speed at which this person creates sculptures.\n\nThis stat only affects the how fast sculptures are produced, not their quality. Quality is determined by the sculptor's artistic skill.</description>
    <category>PawnWork</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.1</minValue>
    <toStringStyle>PercentZero</toStringStyle>
    <statFactors>
      <li>WorkSpeedGlobal</li>
    </statFactors>
    <capacityFactors>
      <li>
        <capacity>Manipulation</capacity>
        <weight>1</weight>
      </li>
      <li>
        <capacity>Sight</capacity>
        <weight>0.25</weight>
				<max>1</max>
			</li>
    </capacityFactors>
  </StatDef>

