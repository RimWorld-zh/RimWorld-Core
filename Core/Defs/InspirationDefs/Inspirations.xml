<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <InspirationDef>
        <defName>WorkFrenzy</defName>
        <label>work frenzy</label>
        <baseDurationDays>1</baseDurationDays>
        <beginLetterLabel>Inspiration: work frenzy</beginLetterLabel>
        <beginLetter>{0} has just been inspired. HECAP will work 2.5 times faster for the next 24 hours.</beginLetter>
        <beginLetterDef>PositiveEvent</beginLetterDef>
        <endMessage>{0} is no longer inspired (work frenzy).</endMessage>
        <baseInspectLine>Inspired: Work frenzy</baseInspectLine>
        <statFactors>
            <WorkSpeedGlobal>2.5</WorkSpeedGlobal>
        </statFactors>
    </InspirationDef>

    <InspirationDef>
        <defName>GoFrenzy</defName>
