<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <InspirationDef>
    <defName>Frenzy_Work</defName>
    <label>work frenzy</label>
    <baseDurationDays>8</baseDurationDays>
    <beginLetterLabel>Inspiration: Work frenzy</beginLetterLabel>
    <beginLetter>{0} has just been inspired. [PAWN_pronoun] will work 2.5 times faster for the next 24 hours.</beginLetter>
    <beginLetterDef>PositiveEvent</beginLetterDef>
    <endMessage>{0} is no longer inspired (work frenzy).</endMessage>
    <baseInspectLine>Inspired: Work frenzy</baseInspectLine>
    <statFactors>
      <WorkSpeedGlobal>2.0</WorkSpeedGlobal>
    </statFactors>
  </InspirationDef>

