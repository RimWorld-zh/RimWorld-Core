<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StorytellerDef Name="BaseStoryteller" Abstract="True">
    <populationIntentFromPopCurve>
      <points>
        <li>0,  8.0</li>
        <li>1,  2.0</li>
        <li>4,  1.0</li>
        <li>7,  0.4</li>
        <li>9,  0.1</li>
        <li>12, 0.0</li>
        <li>20,-1.0</li>
      </points>
    </populationIntentFromPopCurve>
    <populationIntentFromTimeCurve>
      <points>
        <li>( 0, 0)</li>
        <li>( 7, 0.15)</li>
        <li>(20, 1.00)</li>
      </points>
    </populationIntentFromTimeCurve>
    <pointsFactorFromAdaptDays>
      <points>
        <li>(-40, 0.60)</li>
        <li>(  0, 1.00)</li>
        <li>( 60, 1.60)</li>
        <li>(600, 7.00)</li>
      </points>
    </pointsFactorFromAdaptDays>
    <adaptDaysMin>-60</adaptDaysMin>
    <adaptDaysGameStartGraceDays>30</adaptDaysGameStartGraceDays>
    <adaptDaysLossFromColonistLostByPostPopulation>
      <points>
        <li>( 0, 28)</li><!-- 28 days at normal pops; slightly lower at really high pop -->
        <li>(12, 28)</li>
        <li>(24, 24)</li>
      </points>
    </adaptDaysLossFromColonistLostByPostPopulation>
    <adaptDaysLossFromColonistViolentlyDownedByPopulation>
      <points>
        <li>(1,  8)</li>
        <li>(2,  6)</li>
        <li>(3,  4)</li>
        <li>(12, 3)</li>
      </points>
    </adaptDaysLossFromColonistViolentlyDownedByPopulation>
    <adaptDaysGrowthRateCurve>
      <points>
        <li>(-30.01,6)</li>
        <li>(-30,   3)</li>
        <li>(-0.01, 3)</li>
        <li>(0,     1)</li>
        <li>(59.99, 1)</li>
        <li>(60,    0.5)</li>
        <li>(99.99, 0.5)</li>
        <li>(100,   0.25)</li>
      </points>
    </adaptDaysGrowthRateCurve>
    <comps>
      <li Class="StorytellerCompProperties_DeepDrillInfestation">
        <baseMtbDaysPerDrill>20</baseMtbDaysPerDrill>
        <allowedTargetTypes>
          <li>Map_PlayerHome</li>
          <li>Map_TempIncident</li>
          <li>Map_Misc</li>
          <li>Map_RaidBeacon</li>
        </allowedTargetTypes>
      </li>
    </comps>
  </StorytellerDef>

  <StorytellerDef ParentName="BaseStoryteller">
    <defName>Cassandra</defName>
    <label>Cassandra Classic</label>
    <description>Cassandra creates story events on a classic increasing curve of challenge and tension. She'll push you with dangerous events, then give breathing room, then come back to push once more.</description>
    <portraitLarge>UI/HeroArt/Storytellers/CassandraClassic</portraitLarge>
    <portraitTiny>UI/HeroArt/Storytellers/CassandraClassicTiny</portraitTiny>
    <listOrder>20</listOrder>
    <comps>
      <li Class="StorytellerCompProperties_ClassicIntro"/>
      <li Class="StorytellerCompProperties_ThreatCycle">
        <minDaysPassed>5</minDaysPassed>
        <mtbDaysThreatSmall>3.75</mtbDaysThreatSmall>
        <mtbDaysThreatBig>1.20</mtbDaysThreatBig>
        <threatOffDays>6.0</threatOffDays>
        <threatOnDays>4.6</threatOnDays>
        <minDaysBetweenThreatBigs>1.9</minDaysBetweenThreatBigs>
      </li>
      <li Class="StorytellerCompProperties_CategoryMTB">
        <category>Misc</category>
        <allowedTargetTypes>
          <li>Map_PlayerHome</li>
        </allowedTargetTypes>
        <minDaysPassed>5</minDaysPassed>
        <mtbDays>3</mtbDays>
      </li>
      <li Class="StorytellerCompProperties_CategoryMTB">
        <category>WorldQuest</category>
        <allowedTargetTypes>
          <li>World</li>
        </allowedTargetTypes>
        <minDaysPassed>6</minDaysPassed>
        <mtbDays>8</mtbDays>
        <mtbDaysFactorByDaysPassedCurve>
          <points>
            <li>(6, 5)</li>
            <li>(40, 1)</li>
          </points>
        </mtbDaysFactorByDaysPassedCurve>
      </li>
      <li Class="StorytellerCompProperties_CategoryMTB">
        <category>Misc</category>
        <allowedTargetTypes>
          <li>World</li>
        </allowedTargetTypes>
        <minDaysPassed>15</minDaysPassed>
        <mtbDays>15</mtbDays>
      </li>
      <li Class="StorytellerCompProperties_CategoryIndividualMTBByBiome">
        <category>Misc</category>
        <allowedTargetTypes>
          <li>Caravan</li>
          <li>Map_TempIncident</li>
        </allowedTargetTypes>
      </li>
      <li Class="StorytellerCompProperties_FactionInteraction">
        <minDaysPassed>5</minDaysPassed>
        <baseMtbDays>6</baseMtbDays>
        <allowedTargetTypes>
          <li>Map_PlayerHome</li>
        </allowedTargetTypes>
      </li>
      <li Class="StorytellerCompProperties_AllyAssistance">
        <baseMtbDays>6</baseMtbDays>
      </li>
      <li Class="StorytellerCompProperties_SingleMTB">
        <incident>OrbitalTraderArrival</incident>
        <mtbDays>13</mtbDays>
      </li>
      <li Class="StorytellerCompProperties_ShipChunkDrop"/>
      <li Class="StorytellerCompProperties_Disease">
        <minDaysPassed>7</minDaysPassed>
        <incidentCategory>DiseaseHuman</incidentCategory>
      </li>
      <li Class="StorytellerCompProperties_Disease">
        <minDaysPassed>7</minDaysPassed>
        <incidentCategory>DiseaseAnimal</incidentCategory>
      </li>
      <li Class="StorytellerCompProperties_CategoryIndividualMTBByBiome">
        <category>ThreatSmall</category>
        <allowedTargetTypes>
          <li>Caravan</li>
          <li>Map_TempIncident</li>
        </allowedTargetTypes>
        <applyCaravanVisibility>true</applyCaravanVisibility>
      </li>
      <li Class="StorytellerCompProperties_CategoryIndividualMTBByBiome">
        <category>ThreatBig</category>
        <allowedTargetTypes>
          <li>Caravan</li>
          <li>Map_TempIncident</li>
        </allowedTargetTypes>
        <applyCaravanVisibility>true</applyCaravanVisibility>
      </li>
      <li Class="StorytellerCompProperties_JourneyOffer"/>
      <li Class="StorytellerCompProperties_ThreatCycle">
        <allowedTargetTypes>
          <li>Map_RaidBeacon</li>
        </allowedTargetTypes>
        <mode>RaidBeacon</mode>
        <threatOffDays>0.8</threatOffDays>
        <threatOnDays>0.6</threatOnDays>
        <minDaysBetweenThreatBigs>0.05</minDaysBetweenThreatBigs>
        <minDaysBeforeNonRaidThreatBig>0</minDaysBeforeNonRaidThreatBig>
        <mtbDaysThreatSmall>1000000</mtbDaysThreatSmall>        <!-- mtbDaysThreatSmall effectively disabled -->
        <mtbDaysThreatBig>0.37</mtbDaysThreatBig>
        <threatSmallCategory>RaidBeacon</threatSmallCategory>
        <threatBigCategory>RaidBeacon</threatBigCategory>
      </li>
    </comps>
  </StorytellerDef>

