<Defs>

	<StorytellerDef Name="BaseStoryteller" Abstract="True">
		<populationIntentFromTimeCurve>
			<points>
				<li>0, 0.05</li>
				<li>5, 0.15</li>
				<li>10, 1</li>
			</points>
		</populationIntentFromTimeCurve>
    <pointsFactorFromRampDays>
      <points>
        <li>(10,  1)</li>
        <li>(130, 2)</li>
        <li>(1000,5)</li>
      </points>
    </pointsFactorFromRampDays>
    <rampDaysLossFromColonistDiedByPostPopulation>
      <points>
        <li>(3,  9999)</li>
        <li>(4,  30)</li>
        <li>(7,  30)</li>
        <li>(8,  20)</li>
        <li>(9,  15)</li>
